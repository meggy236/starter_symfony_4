{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ vite_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('admin', { attr: { 'data-entry': 'admin' } }) }}

    {% if app.debug %}
        {# makes svgs work with the dev server #}
        <script defer src="/js/svgxuse.min.js"></script>
    {% endif %}
{% endblock %}

{% block body %}
    {# #app is what Vue.js mounts to #}
    <div id="app">
        {% include 'flash_messages.html.twig' %}

        {% include 'loading.html.twig' %}
    </div>
{% endblock body %}
