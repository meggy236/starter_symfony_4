{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('public') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('public') }}

    {# @todo-symfony remove is no IE support is needed #}
    {# make svg's with use referencing an external image work in IE #}
    <script defer src="{{ asset('build/svgxuse.min.js') }}"></script>
{% endblock %}

{% block header %}
    <header>
        <div class="flex flex-wrap justify-between items-center w-content"
             :class="{ 'header-mobile-open': showMobileMenu }">
            <a href="{{ path('index') }}">
                <img src="/images/logo.svg" width="150" alt="{{ 'app.parameter.name'|trans }}">
            </a>

            <nav class="w-full lg:w-auto">
                <ul class="flex flex-no-wrap list-none">
                    <li class="header-nav_item">
                        <a href="/">About</a>
                    </li>
                    <li class="header-nav_item header-nav_item-products">
                        <a href="/">Products</a>
                    </li>
                    <li class="header-nav_item">
                        <a href="/">Contact</a>
                    </li>

                    <li v-if="!showMobileMenu" class="header-nav_item header-nav_item-toggle">
                        <button type="button"
                                class="button-link"
                                @click="toggleMobileMenu">+ More</button>
                    </li>
                    <li v-else class="header-nav_item header-nav_item-toggle">
                        <button type="button"
                                class="button-link"
                                @click="toggleMobileMenu">â€“ Less</button>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
{% endblock header %}

{% block body %}
    {{ parent() }}
{% endblock body %}
